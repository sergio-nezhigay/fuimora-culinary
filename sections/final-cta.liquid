<div id="section-{{ section.id }}" class="final-cta-section" style="position: relative; overflow: hidden; min-height: {{ section.settings.height }}px; display: flex; align-items: center; justify-content: center; text-align: center;">

  {%- if section.settings.image != blank -%}
    <div class="final-cta-bg" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 0;">
      {%- render 'lazy-image', image: section.settings.image, sizes: '100vw', class: 'image-cover' -%}
    </div>
    <style>
      #section-{{ section.id }} .final-cta-bg img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    </style>
  {%- endif -%}

  <div class="final-cta-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1; background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>

  <div class="final-cta-content" style="position: relative; z-index: 2; padding: 40px 20px; max-width: 800px; margin: 0 auto;">

    {%- if section.settings.title != blank -%}
      <h2 class="h1" style="color: {{ section.settings.text_color }}; margin-bottom: 20px;">
        {{ section.settings.title | escape }}
      </h2>
    {%- endif -%}

    {%- if section.settings.text != blank -%}
      <div class="rte" style="color: {{ section.settings.text_color }}; margin-bottom: 40px; font-size: 1.25em;">
        {{ section.settings.text }}
      </div>
    {%- endif -%}

    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link }}" class="button button--solid" style="background-color: #fff; color: #000; border-color: #fff;">
        {{ section.settings.button_label | escape }}
      </a>
    {%- endif -%}

  </div>
</div>

{% schema %}
{
  "name": "Final CTA",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "height",
      "min": 300,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Section Height",
      "default": 500
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 50
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Final value prop and reason someone should purchase your product today"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Our product does X, Y, Z (articulate main benefit your product provides & explain how you do it in a proprietary or unique way).</p>"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Final CTA"
    }
  ]
}
{% endschema %}
