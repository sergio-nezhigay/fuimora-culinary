{{- 'icons.out.css' | asset_url | stylesheet_tag -}}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }} {
    background: {{ section.settings.bg_color }};
    overflow: hidden;
  }

  .section-{{ section.id }} .section-icons__item img {
    height: {{ section.settings.icon_height }}px;
    max-width: 100px;
  }
{%- endstyle -%}

<section class="section-{{ section.id }} section-icons section-{{ section.id }}-padding">
  <div class="section-icons__wrapper" id="icons-marquee">
    {% for block in section.blocks %}
      <div class="section-icons__item">
        {% if block.settings.image != blank %}
          {{ block.settings.image | image_url: width: 200 | image_tag: alt: 'Icon' }}
        {% else %}
          {{ 'icon-placeholder.svg' | inline_asset_content }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const wrapper = document.querySelector('#icons-marquee');
    if (!wrapper) return;

    const speed = 0.5;

    wrapper.innerHTML += wrapper.innerHTML;

    const items = wrapper.querySelectorAll('.section-icons__item');
    const totalItems = items.length / 2; 

    let position = 0;

    function animate() {
      position -= speed;

      const firstHalfWidth = Array.from(items)
        .slice(0, totalItems)
        .reduce((acc, el) => acc + el.offsetWidth + 40, 0); // +40px лил░ gap

      if (Math.abs(position) >= firstHalfWidth) {
        position += firstHalfWidth;
      }

      wrapper.style.transform = `translateX(${position}px)`;
      requestAnimationFrame(animate);
    }

    animate();
  });
</script>

