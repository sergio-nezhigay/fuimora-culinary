{% comment %}
  Brand Essentials Section
  - Responsive grid (2 cols mobile, 3-5 cols desktop)
  - 3D Flip effect on click
  - Custom SVG icons from React source
{% endcomment %}

{%- style -%}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.background_color | default: '#0a0a0a' }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    overflow: hidden;
  }

  .brand-essentials-container {
    max-width: 1800px;
    margin: 0 auto;
    padding: 0 24px;
    font-family: var(--font-body-family), sans-serif;
  }

  .brand-essentials-title {
    text-align: center;
    margin-bottom: 60px;
  }

  .brand-essentials-title h2 {
    font-size: clamp(32px, 5vw, 64px);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #ffffff;
    margin: 0;
  }

  .brand-essentials-instruction {
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: rgba(255, 255, 255, 0.6);
    margin-top: 16px;
    margin-bottom: 0;
  }

  @media screen and (min-width: 768px) {
    .brand-essentials-instruction {
      display: none;
    }
  }

  .brand-essentials-grid {
    display: grid;
    gap: 32px;
    grid-template-columns: repeat(2, 1fr);
  }

  @media screen and (min-width: 768px) {
    .brand-essentials-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (min-width: 1024px) {
    .brand-essentials-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media screen and (min-width: 1440px) {
    .brand-essentials-grid {
      grid-template-columns: repeat(7, 1fr);
      gap: 16px;
    }
  }

  .brand-essentials-card {
    position: relative;
    height: 300px;
    perspective: 1000px;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
  }

  .brand-essentials-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    transform-style: preserve-3d;
  }

  .brand-essentials-card.is-flipped .brand-essentials-card-inner {
    transform: rotateY(180deg);
  }

  .brand-essentials-card-front,
  .brand-essentials-card-back {
    position: absolute;
    inset: 0;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    border-radius: 32px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .brand-essentials-card-front {
    background: #111111;
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 24px 16px;
    transition: all 0.3s ease;
  }

  .brand-essentials-card-front:hover {
    background: #161616;
    border-color: #ffffff;
  }

  .brand-essentials-card-icon-wrapper {
    margin-bottom: 30px;
    color: #ffffff;
    transition: transform 0.5s ease;
  }

  .brand-essentials-card:hover .brand-essentials-card-icon-wrapper {
    transform: scale(1.05);
  }

  .brand-essentials-card-icon-wrapper svg {
    width: 60px;
    height: 60px;
  }

  .brand-essentials-card-label {
    font-size: 12px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    line-height: 1.4;
    color: rgba(255, 255, 255, 0.7);
    padding: 0 8px;
    transition: color 0.3s ease;
  }

  .brand-essentials-card:hover .brand-essentials-card-label {
    color: #ffffff;
  }

  .brand-essentials-card-hint {
    position: absolute;
    bottom: 32px;
    font-size: 9px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.1);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .brand-essentials-card:hover .brand-essentials-card-hint {
    opacity: 1;
  }

  .brand-essentials-card-back {
    background: #ffffff;
    border: 1px solid #eeeeee;
    transform: rotateY(180deg);
    padding: 40px;
    overflow: hidden;
  }

  .brand-essentials-card-back::before {
    content: "";
    position: absolute;
    inset: 0;
    opacity: 0.15;
    pointer-events: none;
    background-image: radial-gradient(black 1.5px, transparent 0);
    background-size: 24px 24px;
  }

  .brand-essentials-card-back-content {
    position: relative;
    z-index: 1;
  }

  .brand-essentials-card-back-icon {
    width: 40px;
    height: 40px;
    background: rgba(0, 0, 0, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(0, 0, 0, 0.4);
    margin: 0 auto 24px;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .brand-essentials-card-back-icon svg {
    width: 20px;
    height: 20px;
  }

  .brand-essentials-card-back-spec {
    font-size: 8px;
    font-weight: 900;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.6);
    margin-bottom: 12px;
  }

  .brand-essentials-card-description {
    font-family: serif;
    font-size: 18px;
    font-style: italic;
    font-weight: 700;
    line-height: 1.3;
    color: #000000;
    margin: 0;
  }
{%- endstyle -%}

<section id="brand-essentials-{{ section.id }}" class="brand-essentials">
  <div class="brand-essentials-container">
    {%- if section.settings.title != blank or section.settings.instruction_text != blank -%}
      <div class="brand-essentials-title">
        {%- if section.settings.title != blank -%}
          <h2>{{ section.settings.title | escape }}</h2>
        {%- endif -%}
        {%- if section.settings.instruction_text != blank -%}
          <p class="brand-essentials-instruction">{{ section.settings.instruction_text | escape }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="brand-essentials-grid">
      {%- for block in section.blocks -%}
        <div class="brand-essentials-card" {{ block.shopify_attributes }} onclick="this.classList.toggle('is-flipped')">
          <div class="brand-essentials-card-inner">
            <div class="brand-essentials-card-front">
              <div class="brand-essentials-card-icon-wrapper">
                {% render 'brand-essentials-icons', icon: block.settings.icon %}
              </div>
              <h3 class="brand-essentials-card-label">{{ block.settings.label }}</h3>
              <div class="brand-essentials-card-hint">Click to View Details</div>
            </div>

            <div class="brand-essentials-card-back">
              <div class="brand-essentials-card-back-content">
                <div class="brand-essentials-card-back-icon">
                  {% render 'brand-essentials-icons', icon: block.settings.icon %}
                </div>
                <div class="brand-essentials-card-back-spec">Specification</div>
                <p class="brand-essentials-card-description">"{{ block.settings.description }}"</p>
              </div>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Brand Essentials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Brand Essentials"
    },
    {
      "type": "text",
      "id": "instruction_text",
      "label": "Instruction Text (Mobile only)",
      "default": "Select a card to explore specifications"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#0a0a0a"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Essential Item",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "quality", "label": "Chef-Grade Quality" },
            { "value": "modern", "label": "Modern Style" },
            { "value": "fabrics", "label": "Performance Fabrics" },
            { "value": "bulk", "label": "Bulk Orders" },
            { "value": "trusted", "label": "Trusted by Chefs" },
            { "value": "fit", "label": "Tailored Fit" },
            { "value": "shipping", "label": "Fast Shipping" }
          ],
          "default": "quality"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Chef-Grade Quality"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Durable uniforms built for high-performance kitchens."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand Essentials",
      "blocks": [
        { "type": "item", "settings": { "icon": "quality", "label": "Chef-Grade Quality", "description": "Durable uniforms built for high-performance kitchens." } },
        { "type": "item", "settings": { "icon": "modern", "label": "Modern, Exclusive Style", "description": "Fashion-forward designs and brands that help you stand out." } },
        { "type": "item", "settings": { "icon": "fabrics", "label": "Performance Fabrics", "description": "Breathable, long-lasting materials for all-day comfort." } },
        { "type": "item", "settings": { "icon": "bulk", "label": "Easy Bulk Orders & Embroidery", "description": "Streamlined team ordering with custom branding options." } },
        { "type": "item", "settings": { "icon": "trusted", "label": "Trusted by Top Chefs", "description": "Preferred apparel of leading culinary professionals." } },
        { "type": "item", "settings": { "icon": "fit", "label": "Tailored Fit for All", "description": "Comfortable, inclusive sizing worked into every design." } },
        { "type": "item", "settings": { "icon": "shipping", "label": "Fast, Reliable Shipping", "description": "Get your gear quickly and stay service-ready." } }
      ]
    }
  ]
}
{% endschema %}
