{%- comment -%}
  Benefits Section
  - Responsive grid layout
  - 1-7 columns based on blocks
  - Hover to see "Learn More"
  - Interactive smart-positioned tooltips
{%- endcomment -%}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-bg-color: {{ section.settings.bg_color }};
    --section-text-color: {{ section.settings.text_color }};
    --section-heading-size: {{ section.settings.heading_size }}px;
    --section-icon-size: {{ section.settings.icon_size }}px;
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --text-alignment: {{ section.settings.text_alignment }};
  }

  /* Scoped Section Styles */
  .benefits-section {
    background-color: var(--section-bg-color);
    color: var(--section-text-color);
    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
    position: relative;
    overflow: visible;
  }

  .benefits-container {

    margin: 0 auto;
    padding: 0 20px;
    width: 100%;
  }

  /* Grid System */
  .benefits-grid {
    display: grid;
    gap: 30px;
    justify-content: center;
     /* Default for mobile/fallback */
    grid-template-columns: 1fr;
  }

  /* Smart Column Logic based on data-count */
  @media (min-width: 768px) {
    .benefits-grid[data-count="1"] { grid-template-columns: 1fr; max-width: 600px; margin: 0 auto; }
    .benefits-grid[data-count="2"] { grid-template-columns: repeat(2, 1fr); max-width: 900px; margin: 0 auto; }
    .benefits-grid[data-count="3"] { grid-template-columns: repeat(3, 1fr); }
    /* For 4+ items, we want a flexible wrapping grid */
    .benefits-grid[data-count="4"],
    .benefits-grid[data-count="5"],
    .benefits-grid[data-count="6"],
    .benefits-grid[data-count="7"] {
       grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
    }
  }

  /* Card Styles */
  .benefit-card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: var(--text-alignment); /* Left or Center */
    text-align: var(--text-alignment);
    padding: 20px;
    height: 100%;
  }

  .benefit-icon-wrapper {
    margin-bottom: 20px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .benefit-icon-wrapper svg,
  .benefit-icon-wrapper img {
    width: var(--section-icon-size);
    height: var(--section-icon-size);
    object-fit: contain;
  }

  /* Ensure SVG icons from icons-pack are visible */
  .benefit-icon-wrapper svg path,
  .benefit-icon-wrapper svg circle,
  .benefit-icon-wrapper svg rect,
  .benefit-icon-wrapper svg line,
  .benefit-icon-wrapper svg polyline,
  .benefit-icon-wrapper svg polygon,
  .benefit-icon-wrapper svg ellipse {
    stroke: var(--section-text-color);
    stroke-width: 2px;
    fill: none;
  }

  /* Some icons use 'g' group for styling */
  .benefit-icon-wrapper svg g {
    stroke: var(--section-text-color);
    stroke-width: 2px;
  }

  .benefit-title {
    font-size: var(--section-heading-size);
    margin: 0 0 15px 0;
    line-height: 1.3;
    font-weight: 600;
  }

  .benefit-learn-more {
    margin-top: auto; /* Push to bottom if height varies */
    background: none;
    border: none;
    text-decoration: underline;
    text-underline-offset: 4px;
    color: var(--section-text-color);
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 500;
    opacity: 0;
    transform: translateY(5px);
    transition: all 0.3s ease;
    padding: 5px 0;
  }

  /* Show button on hover */
  .benefit-card:hover .benefit-learn-more,
  .benefit-card:focus-within .benefit-learn-more {
    opacity: 1;
    transform: translateY(0);
  }

  /* Tooltip Styles */
  .benefit-tooltip {
    position: absolute;
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    width: 300px; /* Fixed width for better readability */
    max-width: 90vw;
    background-color: #ffffff;
    color: #333333;
    padding: 24px;
    border-radius: 8px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.15);
    z-index: 100;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, transform 0.3s ease, visibility 0.3s;
    pointer-events: none; /* Prevent clicks when hidden */
    text-align: left; /* Always readable left aligned */
  }

  .benefit-tooltip.is-open {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  /* Positioning Modifier Classes */
  .benefit-tooltip.position-bottom {
    top: 100%;
    bottom: auto;
    transform: translateX(-50%) translateY(10px);
  }
  .benefit-tooltip.position-bottom.is-open {
    transform: translateX(-50%) translateY(0);
  }

  .benefit-tooltip.position-top {
    bottom: 100%;
    top: auto;
    transform: translateX(-50%) translateY(-10px);
    margin-bottom: 10px; /* Space from trigger */
  }
  .benefit-tooltip.position-top.is-open {
    transform: translateX(-50%) translateY(0);
  }

  .tooltip-content {
    position: relative;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .tooltip-close {
    position: absolute;
    top: -12px;
    right: -12px;
    width: 24px;
    height: 24px;
    background: #f0f0f0;
    border: none;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 16px;
    line-height: 1;
    color: #666;
    transition: background 0.2s;
  }
  .tooltip-close:hover {
    background: #e0e0e0;
    color: #000;
  }

  /* Backdrop Overlay */
  .benefits-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.4);
    z-index: 90;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s;
  }

  .benefits-backdrop.is-active {
    opacity: 1;
    visibility: visible;
  }

  /* Responsive Adjustments */
  @media (max-width: 767px) {
    .benefit-learn-more {
      opacity: 1; /* Always show "Learn More" on mobile since there is no hover */
      transform: none;
    }
  }

{%- endstyle -%}

<div class="benefits-section" id="benefits-section-{{ section.id }}">
  <div class="benefits-container">
    <div class="benefits-grid" data-count="{{ section.blocks.size }}">
      {%- for block in section.blocks -%}
        <div class="benefit-card" {{ block.shopify_attributes }}>

          <!-- Icon -->
          <div class="benefit-icon-wrapper">
             {%- if block.settings.custom_icon != blank -%}
               {{ block.settings.custom_icon | image_url: width: section.settings.icon_size, height: section.settings.icon_size | image_tag: loading: 'lazy', alt: block.settings.title }}
             {%- else -%}
               {%- render 'icons-pack', icon: block.settings.icon_name -%}
             {%- endif -%}
          </div>

          <!-- Title -->
          <{{ section.settings.seo_tag }} class="benefit-title">
            {{ block.settings.title | escape }}
          </{{ section.settings.seo_tag }}>

          <!-- Action & Tooltip -->
          {%- if block.settings.description != blank -%}
            <button class="benefit-learn-more js-tooltip-trigger" aria-expanded="false" aria-controls="tooltip-{{ block.id }}">
              Learn More
            </button>

            <div id="tooltip-{{ block.id }}" class="benefit-tooltip" role="tooltip">
              <div class="tooltip-content">
                <button class="tooltip-close js-tooltip-close" aria-label="Close tooltip">Ã—</button>
                <div class="rte">
                  {{ block.settings.description }}
                </div>
              </div>
            </div>
          {%- endif -%}

        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<div class="benefits-backdrop js-backdrop"></div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.getElementById('benefits-section-{{ section.id }}');
    if (!section) return;

    const triggers = section.querySelectorAll('.js-tooltip-trigger');
    const closeButtons = section.querySelectorAll('.js-tooltip-close');
    const backdrop = document.querySelector('.js-backdrop');

    function closeAllTooltips() {
      section.querySelectorAll('.benefit-tooltip').forEach(tooltip => {
        tooltip.classList.remove('is-open', 'position-top', 'position-bottom');
      });
      triggers.forEach(trigger => trigger.setAttribute('aria-expanded', 'false'));
      if(backdrop) backdrop.classList.remove('is-active');
    }

    function openTooltip(trigger) {
      const tooltipId = trigger.getAttribute('aria-controls');
      const tooltip = document.getElementById(tooltipId);
      if (!tooltip) return;

      // Close others first
      closeAllTooltips();

      // Smart Position Calculation
      const triggerRect = trigger.getBoundingClientRect();
      const tooltipHeight = 200; // Estimated or calculate dynamically if possible (hidden elements are hard to measure)
      const spaceBelow = window.innerHeight - triggerRect.bottom;
      const spaceAbove = triggerRect.top;

      // Default to bottom, switch to top if not enough space below but enough above
      if (spaceBelow < 250 && spaceAbove > 250) {
        tooltip.classList.add('position-top');
      } else {
        tooltip.classList.add('position-bottom');
      }

      tooltip.classList.add('is-open');
      trigger.setAttribute('aria-expanded', 'true');
      if(backdrop) backdrop.classList.add('is-active');
    }

    // Toggle logic for triggers
    triggers.forEach(trigger => {
      trigger.addEventListener('click', (e) => {
        e.stopPropagation(); // Prevent closing immediately by body click
        const isExpanded = trigger.getAttribute('aria-expanded') === 'true';
        if (isExpanded) {
          closeAllTooltips();
        } else {
          openTooltip(trigger);
        }
      });
    });

    // Close logic
    closeButtons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        closeAllTooltips();
      });
    });

    if (backdrop) {
      backdrop.addEventListener('click', closeAllTooltips);
    }

    // Global Close on ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeAllTooltips();
    });

    // Global Close on Click Outside
    document.addEventListener('click', (e) => {
       if (!section.contains(e.target) && !e.target.closest('.benefit-tooltip')) {
         closeAllTooltips();
       }
    });
  });
</script>

