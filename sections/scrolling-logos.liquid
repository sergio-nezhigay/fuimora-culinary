{%- if section.blocks.size > 0 -%}

  {{ 'section-scrolling-logos.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'component-scrolling-text.js' | asset_url }}" defer></script>

  {% style %}
    #element-{{ section.id }} .scrolling-logos {
      width: calc({{ section.blocks.size }} * 16.666%);
    }
    #element-{{ section.id }} .scrolling-logos .logo-item {
      width: calc(100% / {{ section.blocks.size }});
    }
  {% endstyle %}

  <scrolling-text
    id="element-{{ section.id }}"
    class="scrolling-logos-parent"
    data-scrolling-speed="{{ section.settings.speed }}"
    data-scrolling-direction="{{ section.settings.scroll_direction }}"
    data-pause-on-hover="{{ section.settings.pause_on_hover }}"
    dir="{{ section.settings.scroll_direction }}"
    style="--section-padding-top: {{ section.settings.padding_top }}px; --section-padding-bottom: {{ section.settings.padding_bottom }}px; --logo-grayscale: {{ section.settings.logo_grayscale }}%; --logo-opacity: {{ section.settings.logo_opacity | divided_by: 100.0 }}; background: {{ section.settings.custom_background }};"
  >

    <div class="scrolling-logos">
      {%- for block in section.blocks -%}
        <div class="logo-item" {{ block.shopify_attributes }}>
          <div class="logo-container">
            {%- if block.settings.logo == blank -%}
              <span class="logo-placeholder">{{ 'logo' | placeholder_svg_tag }}</span>
            {%- else -%}
              <img
                src="{{ block.settings.logo | image_url: width: 300 }}"
                alt="{{ block.settings.logo.alt | default: 'Partner logo' | escape }}"
                loading="lazy"
                width="{{ block.settings.logo.width }}"
                height="{{ block.settings.logo.height }}"
              />
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>

  </scrolling-text>

{%- endif -%}

{% schema %}
{
  "name": "Scrolling Logos",
  "class": "mount-scrolling-logos",
  "settings": [
    {
      "type": "header",
      "content": "Animation Settings"
    },
    {
      "id": "scroll_direction",
      "type": "select",
      "options": [
        {
          "value": "ltr",
          "label": "Left to Right"
        },
        {
          "value": "rtl",
          "label": "Right to Left"
        }
      ],
      "default": "ltr",
      "label": "Scroll Direction"
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Scroll Speed",
      "min": 20,
      "max": 300,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause on Hover",
      "default": true
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "custom_background",
      "label": "Background Color",
      "default": "#f9f9f9"
    },
    {
      "type": "range",
      "id": "logo_grayscale",
      "label": "Logo Grayscale Intensity",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 100,
      "unit": "%",
      "info": "0% = full color, 100% = full grayscale. Logos show full color on hover."
    },
    {
      "type": "range",
      "id": "logo_opacity",
      "label": "Logo Opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 70,
      "unit": "%",
      "info": "Opacity when not hovering. Logos show 100% opacity on hover."
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo Image",
          "info": "Recommended: 300px wide, transparent background"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scrolling Logos",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["custom.overlay", "header"]
  }
}
{% endschema %}
